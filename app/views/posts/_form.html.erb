<h1>New Post</h1>

<%= form_for @post do |f| %>
   <%= f.label :title %>
   <%= f.text_field :title %>
   <br> 

   <%= f.label :content %>
   <%= f.text_field :content %>
   <br> <br>
   
   <p>Select existing categories:</p>
   <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
   <br><br>

   <p>Create a new category:</p>
   <%= f.fields_for :categories do |cat_field|%>
      <%= cat_field.text_field :name, placeholder: "Category Name"%>
   <% end %>
   <br><br>

   <%= f.submit %>
<% end %>